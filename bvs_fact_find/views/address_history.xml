                                    <field name="house_number"/>
                                    <field name="flat_number"/>
                                    <field name="building_number"/>
                                    <field name="post_code"/>
                                    <field name="address"/>
                                    <field name="country"/>
                                    <field name="date_moved_in"/>
                                    <field name="date_moved_out"/>
                                    <field name="is_current_address"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="residential_status"/>
                                        <field name="house_number"/>
                                        <field name="flat_number"/>
