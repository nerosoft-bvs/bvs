<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Portal user documents form view-->
    <record model="ir.ui.view" id="portal_user_documents_view_form">
        <field name="name">portal.user.documents.view.form</field>
        <field name="model">portal.user.documents</field>
        <field name="arch" type="xml">
            <form string="Portal User Documents">
                <sheet>
                    <widget name="web_ribbon" text="Active" bg_color="bg-success" attrs="{'invisible': [('check_in_portal', '=', False)]}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="attachment_ids" widget="many2many_binary"/>
                            <field name="customer_type"/>
                        </group>
                        <group>
                            <field name="check_in_portal" widget="boolean_toggle"/>
                            <field name="advisor_fee" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'open_attachments': True}"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!--Portal user documents view tree-->
    <record model="ir.ui.view" id="portal_user_documents_view_tree">
        <field name="name">portal.user.documents.view.tree</field>
        <field name="model">portal.user.documents</field>
        <field name="arch" type="xml">
            <tree string="Portal User documents">
                <field name="name"/>
                <field name="check_in_portal" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!--Portal user documents view action-->
    <record model="ir.actions.act_window" id="action_view_portal_user_documents">
        <field name="name">Portal User Documents</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">portal.user.documents</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records found!
            </p>
            <p>
                You can create a new record using Create button on top left.
            </p>
        </field>
    </record>

    <!--Portal user documents menuitem-->
    <menuitem id="menu_portal_user_documents"
              sequence="20"
              parent="base.menu_custom"
              name="Portal User Documents"
              action="action_view_portal_user_documents"/>

</odoo>