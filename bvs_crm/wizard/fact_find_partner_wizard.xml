<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_fact_find_partner_wizard_form" model="ir.ui.view">
        <field name="name">fact.find.partner.wizard.form</field>
        <field name="model">fact.find.partner.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Partner to Load Fact Find Data">
                <group>
                    <field name="lead_id" invisible="1"/>
                    <field name="partner_id"
                           options="{'no_create': True, 'no_create_edit': True}"
                           help="Select a partner (main customer or applicant) to copy their most recent fact find data"/>
<!--                    <field name="ff_id"-->
<!--                           options="{'no_create': True, 'no_create_edit': True}"-->
<!--                           help="Select a fact find to copy"/>-->
                </group>
                <footer>
                    <button string="Load Fact Find" type="object" name="action_load_fact_find" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fact_find_partner_wizard" model="ir.actions.act_window">
        <field name="name">Load Fact Find Data</field>
        <field name="res_model">fact.find.partner.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
