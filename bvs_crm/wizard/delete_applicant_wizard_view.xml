<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_delete_applicant_wizard_form" model="ir.ui.view">
        <field name="name">delete.applicant.wizard.form</field>
        <field name="model">delete.applicant.wizard</field>
        <field name="arch" type="xml">
            <form string="Delete Applicants">
                <group>
                    <field name="lead_id" readonly="1"/>
                    <field name="applicant_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button string="Delete" type="object" name="action_delete_selected" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_delete_applicant_wizard" model="ir.actions.act_window">
        <field name="name">Delete Applicants</field>
        <field name="res_model">delete.applicant.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
