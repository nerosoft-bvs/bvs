<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_valuation_appointment_notification" model="mail.template">
            <field name="name">Valuation Appointment Notification</field>
            <field name="model_id" model="ir.model" search="[('model', '=', 'bvs.lead')]"/>
            <field name="email_from">"BVS Mortgages &amp; Financial Services Ltd" &lt;system@bvsmortgages.co.uk&gt;</field>
            <field name="email_to">{{object.partner_id.email}}</field>
            <field name="subject">Valuation Appointment Scheduled for {{object.registration_no}}</field>
            <field name="body_html" type="html">
                <p>Hi <t t-out="object.partner_id.name"/>,</p>
                <p>We have scheduled your valuation appointment and will ensure the details are accurate.</p>
                <div style="font-size: 0.9em; color: #888888; margin-top: 20px; text-align: left;">
                    <p style="margin: 0;">Best Regards,</p>
                    <p style="margin: 0;">BVS Mortgages &amp; Financial Services Ltd</p>
                    <p style="margin: 0;">admin@bvsmortgages.co.uk</p>
                    <p style="margin: 0;"><a href="http://www.bvsmortgages.co.uk" style="color: #888888;">www.bvsmortgages.co.uk</a></p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.partner_id.lang}</field>
        </record>

        <record id="email_template_fma_document_uploaded_notification" model="mail.template">
            <field name="name">FMA Document Uploaded Notification</field>
            <field name="model_id" model="ir.model" search="[('model', '=', 'bvs.lead')]"/>
            <field name="email_from">"BVS Mortgages &amp; Financial Services Ltd" &lt;system@bvsmortgages.co.uk&gt;</field>
            <field name="email_to">{{object.partner_id.email}}</field>
            <field name="subject">FMA Document Uploaded for Case {{object.registration_no}}</field>
            <field name="body_html" type="html">
                <p>Dear <t t-out="object.partner_id.name"/>,</p>
                <p>The FMA document for your case <strong><t t-out="object.registration_no"/></strong> has been successfully uploaded.</p>
                <p>You can view the document in your portal.</p>
                <p>If you have any questions, please do not hesitate to contact us.</p>
                <div style="font-size: 0.9em; color: #888888; margin-top: 20px; text-align: left;">
                    <p style="margin: 0;">Best Regards,</p>
                    <p style="margin: 0;">BVS Mortgages &amp; Financial Services Ltd</p>
                    <p style="margin: 0;">admin@bvsmortgages.co.uk</p>
                    <p style="margin: 0;"><a href="http://www.bvsmortgages.co.uk" style="color: #888888;">www.bvsmortgages.co.uk</a></p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.partner_id.lang}</field>
        </record>
    </data>
</odoo>