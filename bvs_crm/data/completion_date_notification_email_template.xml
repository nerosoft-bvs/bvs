<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_completion_date_notification" model="mail.template">
            <field name="name">Completion Date Notification</field>
            <field name="model_id" ref="bvs_crm.model_bvs_lead"/>
            <field name="subject">Completion Date Updated for lead: {{object.registration_no}}</field>
            <field name="email_from">"BVS Mortgages &amp; Financial Services Ltd" &lt;system@bvsmortgages.co.uk&gt;</field>
            <field name="email_to">{{object.partner_id.email}}</field>
            <field name="body_html" type="html">
                <p>Dear <t t-out="object.partner_id.name"/>,</p>
                <p>The completion date for your mortgage application with case number <t t-out="object.registration_no"/> has been updated to <t t-out="object.completion_date"/>.</p>
                <p>Thank you,</p>
                <p><t t-out="object.mortgage_advisor.name"/></p>
            </field>
        </record>
    </data>
</odoo>
