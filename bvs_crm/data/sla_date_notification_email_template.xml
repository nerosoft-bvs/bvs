        <!-- New SLA Date Notification Template -->
        <record id="email_template_sla_date_notification_new" model="mail.template">
            <field name="name">SLA Date Notification (New)</field>
            <field name="model_id" ref="bvs_crm.model_bvs_lead"/>
            <field name="subject">SLA Date Update</field>
            <field name="email_from">"BVS Mortgages &amp; Financial Services Ltd" &lt;system@bvsmortgages.co.uk&gt;</field>
            <field name="email_to">{{object.partner_id.email}}</field>
            <field name="body_html" type="html">
                <p>Hi <t t-out="object.partner_id.name"/>,</p>
                <p>The next update date according to the service level agreement of <t t-out="dict(object._fields['esis_lender'].selection).get(object.esis_lender) or 'your lender'"/> is available. If changes are needed, please let us know.</p>
