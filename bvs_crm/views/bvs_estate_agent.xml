<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_agent_view_form" model="ir.ui.view">
        <field name="name">estate.agent.form</field>
        <field name="model">estate.agent</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="email"/>
                            <field name="mobile"/>
                            <field name="contactable_person"/>
                        </group>
                    </group>
                </sheet>
            </form>

        </field>
    </record>

    <record id="estate_agent_view_tree" model="ir.ui.view">
        <field name="name">estate.agent.tree</field>
        <field name="model">estate.agent</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="mobile"/>
            </tree>
        </field>
    </record>

    <record id="estate_agent_action" model="ir.actions.act_window">
        <field name="name">Estate Agents</field>
        <field name="res_model">estate.agent</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new record.
            </p>
        </field>
    </record>

</odoo>

