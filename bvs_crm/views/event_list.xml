<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="event_list_view_form" model="ir.ui.view">
        <field name="name">event.list.form</field>
        <field name="model">event.list</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>

        </field>
    </record>

    <record id="event_list_view_tree" model="ir.ui.view">
        <field name="name">event.list.tree</field>
        <field name="model">event.list</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>

            </tree>
        </field>
    </record>

    <record id="event_list_action" model="ir.actions.act_window">
        <field name="name">Event List</field>
        <field name="res_model">event.list</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new record.
            </p>
        </field>
    </record>

</odoo>

