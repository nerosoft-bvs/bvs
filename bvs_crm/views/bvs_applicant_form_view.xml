<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bvs_applicant_form_kanban_motgage" model="ir.ui.view">
        <field name="name">bvs.applicants.form.kanban</field>
        <field name="model">bvs.applicants.form</field>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <kanban>
                <field name="partner_id"/>
                <field name="email"/>
                <field name="contact_number"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title"><span><field name="partner_id"/></span></strong>
                            </div>
                            <div>
                                <field name="email"/>
                            </div>
                            <div>
                                <field name="contact_number"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_bvs_applicants_form_tree_motgage" model="ir.ui.view">
        <field name="name">bvs.applicants.form.tree</field>
        <field name="model">bvs.applicants.form</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="email"/>
                <field name="contact_number"/>
            </tree>
        </field>
    </record>

    <record id="bvs_applicants_form_motgage" model="ir.ui.view">
        <field name="name">bvs.applicants.form.form</field>
        <field name="model">bvs.applicants.form</field>
        <field name="arch" type="xml">
            <form create="false">
                <header>
                    <field name="product_type" invisible="1"/>
                    <field name="stage_id" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" required="1"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="email" required="1"/>
                            <field name="contact_number" required="1"/>
                            <field name="lead_id"/>
                        </group>
                        <group>
                            <field name="client_acknowledgment_ill"/>

                            <field name="initial_documents_acknowledgement"/>
                            <field name="fact_finding_documents" widget="many2many_binary"/>
                            <field name="initial_document_submission" widget="many2many_binary"/>
                            <field name="negative_evaluation_documents" widget="many2many_binary"/>
                            <field name="negative_evaluation_acknowledgement"/>
                            <field name="client_acknowledgement_of_new_offer"/>
                            <field name="mortgage_offer_details_acknowledgement"/>
                            <field name="survey_acknowledgement"/>
                            <field name="risk_calculator_acknowledgement"/>
                            <field name="medical_underwriting_acknowledgement"/>
                            <field name="data_capture_form_submission" widget="many2many_binary"/>
                            <field name="home_insurance_quote_acknowledgement"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="bvs_applicants_form_action" model="ir.actions.act_window">
        <field name="name">Applicant Forms</field>
        <field name="res_model">bvs.applicants.form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">kanban,form,tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new record.
            </p>
        </field>
    </record>

</odoo>


