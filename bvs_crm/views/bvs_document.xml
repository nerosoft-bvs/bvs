<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bvs_document_view_form" model="ir.ui.view">
        <field name="name">bvs.document.form</field>
        <field name="model">bvs.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Description" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="attachment_ids" widget="many2many_binary" required="1"/>
                        <field name="is_public"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="bvs_document_view_tree" model="ir.ui.view">
        <field name="name">bvs.document.tree</field>
        <field name="model">bvs.document</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="bvs_document_action" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">bvs.document</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new record.
            </p>
        </field>
    </record>

</odoo>

