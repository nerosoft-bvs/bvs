<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bvs_document_view_form" model="ir.ui.view">
        <field name="name">bvs.document.form</field>
        <field name="model">bvs.document</field>
        <field name="arch" type="xml">
            <form create="0" edit="0">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>

                </header>
                <sheet>
                    <group>
                        <field name="document_list_id" required="1"/>
                        <field name="partner_id"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                        <field name="fact_find_id"/>
                        <field name="lead_id"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="bvs_document_view_tree" model="ir.ui.view">
        <field name="name">bvs.document.tree</field>
        <field name="model">bvs.document</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="partner_id"/>
                <field name="document_list_id"/>
            </tree>
        </field>
    </record>

    <record id="bvs_document_action" model="ir.actions.act_window">
        <field name="name">Further Documents</field>
        <field name="res_model">bvs.document</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new record.
            </p>
        </field>
    </record>

    <menuitem id="menu_bvs_documents"
              name="Further Documents"
              parent="bvs_crm.menu_lead_configuration_data"
              action="bvs_document_action"
              sequence="10"/>

</odoo>

