<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--BVS portal Fact Find Your New-Mortgage Building & Contents Insurance-->
    <template id="bvs_portal_ff_ynm_building_n_contents_insurance"
              name="BVS Portal: FF YNM Building &amp; Contents Insurance">
        <main class="content px-3 py-2 d-none" id="ff_ynm_building_n_contents_insurance">
            <div class="container-fluid">
                <div class="mb-3 mt-3">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="header-hp">New Property Details</h1>
                            <div class="fact-find fact-find-welcome">
                                <div class="profile-container">
                                    <form t-attf-action="/fact_find/new-property/submit/" method="POST"
                                          class="ff-expenditure-submit ff-form">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <t t-att-data-fact-find-id="fact_find.id"/>
                                        <div class="form-group property_usage">
                                            <label for="property_usage">Property Usage
                                                <span class="text-danger">*</span>
                                            </label>
                                            <select class="form-control property_usage" id="property_usage"
                                                    name="property_usage"
                                                    t-att-value="fact_find.property_usage">
                                                <option value="">
                                                </option>
                                                <option value="residential"
                                                        t-att-selected="fact_find.property_usage == 'residential'">
                                                    Residential
                                                </option>
                                                <option value="second_residential"
                                                        t-att-selected="fact_find.property_usage == 'second_residential'">
                                                    Second Residential
                                                </option>
                                                <option value="btl" t-att-selected="fact_find.property_usage == 'btl'">
                                                    BTL
                                                </option>
                                                <option value="company_btl"
                                                        t-att-selected="fact_find.property_usage == 'company_btl'">
                                                    Company BTL
                                                </option>
                                            </select>
                                        </div>

                                        <!-- Is New Build Property -->
                                        <div class="chkboxes is_new_build d-none">
                                            <label class="col-form-label col-sm-auto">Is this a new
                                                build property?
                                                <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-sm">
                                                <input type="checkbox" name="is_new_build" id="is_new_build"
                                                       class="form-check-input is_new_build"
                                                       t-att-checked="fact_find.is_new_build"/>
                                            </div>
                                        </div>

                                        <!-- Address Search -->
                                        <div class="form-group">
                                            <label for="insurance-address-search">Address
                                                <span class="text-danger">*</span>
                                            </label>
                                            <input type="text" class="form-control"
                                                   id="insurance-address-search"
                                                   name="insurance-address-search"
                                                   placeholder="Start typing to search address..."/>
                                        </div>

                                        <!-- Full Address -->
                                        <div class="form-group address">
                                            <label for="address3">Full Address</label>
                                            <textarea
                                                    style="font-size:0.75rem;"
                                                    t-attf-class="form-control #{fact_find.address and 'has-value' or ''}"
                                                    id="address3" name="address3" t-esc="fact_find.address"></textarea>
                                        </div>


                                        <!-- House/Flat Number -->
                                        <div class="form-group house_flat_no">
                                            <label for="house_flat_no">House No / Flat No
                                                <span class="text-danger">*</span>
                                            </label>
                                            <input type="text" class="form-control" id="house_flat_no"
                                                   name="house_flat_no"
                                                   t-att-value="fact_find.house_flat_no"/>
                                        </div>

                                        <!-- Post Code -->
                                        <div class="form-group post_code">
                                            <label for="post_code">Post Code
                                                <span class="text-danger">*</span>
                                            </label>
                                            <input type="text" class="form-control" id="post_code3" name="post_code3"
                                                   t-att-value="fact_find.post_code"/>
                                        </div>



                                        <!-- Building Name -->
                                        <div class="form-group building_name">
                                            <label for="building_name">Building Name
                                                <span class="text-danger">*</span>
                                            </label>
                                            <input type="text" class="form-control" id="building_name3"
                                                   name="building_name3"
                                                   t-att-value="fact_find.building_name"/>
                                        </div>

                                        <!-- Street Address -->
                                        <div class="form-group street_address">
                                            <label for="street_address">Street Address
                                                <span class="text-danger">*</span>
                                            </label>
                                            <input type="text" class="form-control" id="street_address3"
                                                   name="street_address3"
                                                   t-att-value="fact_find.street_address"/>
                                        </div>

                                        <!-- County -->
                                        <div class="form-group county">
                                            <label for="county">County
                                                <span class="text-danger">*</span>
                                            </label>
                                            <input type="text" class="form-control" id="county3" name="county3"
                                                   t-att-value="fact_find.county"/>
                                        </div>

                                        <!-- Market Price -->
                                        <div class="form-group market_price">
                                            <label for="market_price">Market Price
                                                <span class="text-danger">*</span>
                                            </label>
                                            <input type="number" class="form-control" id="market_price"
                                                   name="market_price"
                                                   t-att-value="fact_find.market_price"/>
                                        </div>

                                        <!-- Checkbox for Commute Over One Hour -->
                                        <div class="chkboxes commute_over_one_hour_field">
                                            <label class="form-check-label" for="commute_over_one_hour">
                                                Do you spend more than one hour to travel from the new property to the
                                                current employment address?
                                            </label>
                                            <input type="checkbox" class="form-check-input" id="commute_over_one_hour"
                                                   name="commute_over_one_hour"
                                                   t-att-checked="fact_find.commute_over_one_hour"/>
                                        </div>

                                        <!-- Monthly Commute Cost -->
                                        <div class="form-group monthly_commute_cost_field d-none">
                                            <label for="monthly_commute_cost">Monthly Commute Cost</label>
                                            <input type="number" class="form-control" id="monthly_commute_cost"
                                                   name="monthly_commute_cost"
                                                   t-att-value="fact_find.monthly_commute_cost"/>
                                        </div>

                                        <!-- Property Type -->
                                        <div class="form-group">
                                            <label for="property_type">Property Type</label>
                                            <select class="form-control" id="property_type" name="property_type"
                                                    t-att-value="fact_find.property_type">
                                                <option value=""/>
                                                <option value="semi_detached"
                                                        t-att-selected="fact_find.property_type == 'semi_detached'">
                                                    Semi-detached
                                                </option>
                                                <option value="detached"
                                                        t-att-selected="fact_find.property_type == 'detached'">Detached
                                                </option>
                                                <option value="terraced"
                                                        t-att-selected="fact_find.property_type == 'terraced'">Terraced
                                                </option>
                                                <option value="end_terraced"
                                                        t-att-selected="fact_find.property_type == 'end_terraced'">
                                                    End-Terraced
                                                </option>
                                                <option value="purpose_built_flat"
                                                        t-att-selected="fact_find.property_type == 'purpose_built_flat'">
                                                    Purpose Built Flat
                                                </option>
                                                <option value="maisonette"
                                                        t-att-selected="fact_find.property_type == 'maisonette'">
                                                    Maisonette
                                                </option>
                                                <option value="converted_flat"
                                                        t-att-selected="fact_find.property_type == 'converted_flat'">
                                                    Converted Flat
                                                </option>
                                                <option value="bungalow"
                                                        t-att-selected="fact_find.property_type == 'bungalow'">Bungalow
                                                </option>
                                                <option value="other"
                                                        t-att-selected="fact_find.property_type == 'other'">Other
                                                </option>
                                            </select>
                                        </div>

                                        <!-- Tenure -->
                                        <div class="form-group">
                                            <label for="tenure">Tenure</label>
                                            <select class="form-control" id="tenure" name="tenure"
                                                    t-att-value="fact_find.tenure">
                                                <option value="">
                                                </option>
                                                <option value="freehold"
                                                        t-att-selected="fact_find.tenure == 'freehold'">Freehold
                                                </option>
                                                <option value="leasehold"
                                                        t-att-selected="fact_find.tenure == 'leasehold'">Leasehold
                                                </option>
                                            </select>
                                        </div>

                                        <!-- Number of Bedrooms -->
                                        <div class="form-group no_bedrooms">
                                            <label for="no_bedrooms">No of bedrooms</label>
                                            <input type="number" class="form-control" id="no_bedrooms"
                                                   name="no_bedrooms"
                                                   t-att-value="fact_find.no_bedrooms"/>
                                        </div>

                                        <!-- Number of Bathrooms -->
                                        <div class="form-group no_bathrooms">
                                            <label for="no_bathrooms">No of bathrooms</label>
                                            <input type="number" class="form-control" id="no_bathrooms"
                                                   name="no_bathrooms"
                                                   t-att-value="fact_find.no_bathrooms"/>
                                        </div>

                                        <!-- Kitchen -->
                                        <div class="form-group kitchen">
                                            <label for="kitchen">Kitchen</label>
                                            <input type="number" class="form-control" id="kitchen" name="kitchen"
                                                   t-att-value="fact_find.kitchen"/>
                                        </div>

                                        <!-- Living Rooms -->
                                        <div class="form-group living_rooms">
                                            <label for="living_rooms">Living rooms</label>
                                            <input type="number" class="form-control" id="living_rooms"
                                                   name="living_rooms"
                                                   t-att-value="fact_find.living_rooms"/>
                                        </div>

                                        <!-- Garage Space -->
                                        <div class="form-group garage_space">
                                            <label for="garage_space">Garage Space</label>
                                            <input type="number" class="form-control" id="garage_space"
                                                   name="garage_space"
                                                   t-att-value="fact_find.garage_space"/>
                                        </div>

                                        <!-- Parking -->
                                        <div class="form-group parking">
                                            <label for="parking">Parking</label>
                                            <select class="form-control" id="parking" name="parking"
                                                    t-att-value="fact_find.parking">
                                                <option value=""/>
                                                <option value="single" t-att-selected="fact_find.parking == 'single'">
                                                    Single
                                                </option>
                                                <option value="double" t-att-selected="fact_find.parking == 'double'">
                                                    Double
                                                </option>
                                                <option value="on_site" t-att-selected="fact_find.parking == 'on_site'">
                                                    On-site
                                                </option>
                                                <option value="road_side"
                                                        t-att-selected="fact_find.parking == 'road_side'">Road-Side
                                                </option>
                                            </select>
                                        </div>

                                        <!-- Number of Stories in Building -->
                                        <div class="form-group no_stories_in_building">
                                            <label for="no_stories_in_building">No of stories in the building</label>
                                            <input type="number" class="form-control" id="no_stories_in_building"
                                                   name="no_stories_in_building"
                                                   t-att-value="fact_find.no_stories_in_building"/>
                                        </div>

                                        <!-- Estimated Built Year -->
                                        <div t-attf-class="form-group estimated_built_year #{fact_find.estimated_built_year and 'filled' or ''}">
                                            <label for="estimated_built_year">Estimated Built Year</label>
                                            <select name="estimated_built_year"
                                                    t-attf-class="form-control #{fact_find.estimated_built_year and 'has-value' or ''}"
                                                    id="estimated_built_year">
                                                <option value="">Year</option>
                                                <t t-foreach="range(1900, 2030)" t-as="year">
                                                    <option t-att-value="year"
                                                            t-att-selected="fact_find.estimated_built_year == str(year)">
                                                        <t t-esc="year"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>


                                        <!-- Warranty Providers Name -->
                                        <div class="form-group warranty_providers_name_field d-none">
                                            <label for="warranty_providers_name">Warranty providers Name</label>
                                            <input type="text" class="form-control" id="warranty_providers_name"
                                                   name="warranty_providers_name"
                                                   t-att-value="fact_find.warranty_providers_name"/>
                                        </div>

                                        <!-- EPC / Predicted EPC Rate -->
                                        <div class="form-group epc_predicted_epc_rate">
                                            <label for="epc_predicted_epc_rate">EPC / Predicted EPC Rate</label>
                                            <select class="form-control" id="epc_predicted_epc_rate"
                                                    name="epc_predicted_epc_rate">
                                                <option value=""/>
                                                <option value="a"
                                                        t-att-selected="fact_find.epc_predicted_epc_rate == 'a'">A
                                                </option>
                                                <option value="b"
                                                        t-att-selected="fact_find.epc_predicted_epc_rate == 'b'">B
                                                </option>
                                                <option value="c"
                                                        t-att-selected="fact_find.epc_predicted_epc_rate == 'c'">C
                                                </option>
                                                <option value="d"
                                                        t-att-selected="fact_find.epc_predicted_epc_rate == 'd'">D
                                                </option>
                                                <option value="e"
                                                        t-att-selected="fact_find.epc_predicted_epc_rate == 'e'">E
                                                </option>
                                                <option value="f"
                                                        t-att-selected="fact_find.epc_predicted_epc_rate == 'f'">F
                                                </option>
                                                <option value="na"
                                                        t-att-selected="fact_find.epc_predicted_epc_rate == 'na'">NA
                                                </option>
                                            </select>
                                        </div>

                                        <!-- PEA Rate -->
                                        <div class="form-group pea_rate">
                                            <label for="pea_rate">PEA Rate</label>
                                            <select class="form-control" id="pea_rate" name="pea_rate">
                                                <option value=""/>
                                                <option value="a" t-att-selected="fact_find.pea_rate == 'a'">A</option>
                                                <option value="b" t-att-selected="fact_find.pea_rate == 'b'">B</option>
                                                <option value="c" t-att-selected="fact_find.pea_rate == 'c'">C</option>
                                                <option value="d" t-att-selected="fact_find.pea_rate == 'd'">D</option>
                                                <option value="e" t-att-selected="fact_find.pea_rate == 'e'">E</option>
                                                <option value="f" t-att-selected="fact_find.pea_rate == 'f'">F</option>
                                                <option value="na" t-att-selected="fact_find.pea_rate == 'na'">NA
                                                </option>
                                            </select>
                                        </div>

                                        <!-- Ex-Council -->
                                        <div class="chkboxes ex_council">
                                            <label class="form-check-label" for="ex_council">Ex-Council</label>
                                            <input type="checkbox" class="form-check-input" id="ex_council"
                                                   name="ex_council" t-att-checked="fact_find.ex_council"/>
                                        </div>


                                        <!-- Annual Service Charge -->
                                        <div class="form-group house_flat_no">
                                            <label for="annual_service_charge">Annual service charge</label>
                                            <input type="number" class="form-control" id="annual_service_charge"
                                                   name="annual_service_charge"
                                                   t-att-value="fact_find.annual_service_charge"/>
                                        </div>

                                        <!-- Wall Construction Type -->
                                        <div class="form-group wall_construction_type">
                                            <label for="wall_construction_type">Wall Construction type</label>
                                            <select class="form-control" id="wall_construction_type"
                                                    name="wall_construction_type">
                                                <option value=""/>
                                                <option value="brick"
                                                        t-att-selected="fact_find.wall_construction_type == 'brick'">
                                                    Brick
                                                </option>
                                                <option value="brick_over_timber_frame"
                                                        t-att-selected="fact_find.wall_construction_type == 'brick_over_timber_frame'">
                                                    Brick over Timber Frame
                                                </option>
                                                <option value="timber"
                                                        t-att-selected="fact_find.wall_construction_type == 'timber'">
                                                    Timber
                                                </option>
                                                <option value="stone"
                                                        t-att-selected="fact_find.wall_construction_type == 'stone'">
                                                    Stone
                                                </option>
                                                <option value="metal"
                                                        t-att-selected="fact_find.wall_construction_type == 'metal'">
                                                    Metal
                                                </option>
                                            </select>
                                        </div>

                                        <!-- Roof Construction Type -->
                                        <div class="form-group roof_construction_type">
                                            <label for="roof_construction_type">Roof Construction type</label>
                                            <select class="form-control" id="roof_construction_type"
                                                    name="roof_construction_type">
                                                <option value=""/>
                                                <option value="tile"
                                                        t-att-selected="fact_find.roof_construction_type == 'tile'">Tile
                                                </option>
                                                <option value="slate"
                                                        t-att-selected="fact_find.roof_construction_type == 'slate'">
                                                    Slate
                                                </option>
                                                <option value="timber"
                                                        t-att-selected="fact_find.roof_construction_type == 'timber'">
                                                    Timber
                                                </option>
                                                <option value="asphalt"
                                                        t-att-selected="fact_find.roof_construction_type == 'asphalt'">
                                                    Asphalt
                                                </option>
                                            </select>
                                        </div>

                                        <!-- Remaining Lease Term in Years -->
                                        <div class="form-group remaining_lease_term_in_years d-none">
                                            <label for="remaining_lease_term_in_years">Remaining lease term in years
                                            </label>
                                            <input type="number" class="form-control" id="remaining_lease_term_in_years"
                                                   name="remaining_lease_term_in_years"
                                                   t-att-value="fact_find.remaining_lease_term_in_years"/>
                                        </div>

                                        <!-- Additional Property Details -->
                                        <div class="form-group flat_in_floor">
                                            <label for="flat_in_floor">Flat in floor</label>
                                            <input type="number" id="flat_in_floor" name="flat_in_floor"
                                                   class="form-control" t-att-value="fact_find.flats_in_floor"/>
                                        </div>

                                        <!-- Flats on the Same Floor Count -->
                                        <div class="form-group flats_same_floor_count">
                                            <label for="flats_same_floor_count">How many flats are on the same floor?
                                            </label>
                                            <input type="number" class="form-control" id="flats_same_floor_count"
                                                   name="flats_same_floor_count"
                                                   t-att-value="fact_find.flats_same_floor_count"/>
                                        </div>

                                        <!-- Above Commercial Property -->
                                        <div class="form-group above_commercial_property">
                                            <label for="above_commercial_property">
                                                Is the flat situated above a commercial property?
                                            </label>
                                            <select class="form-control" id="above_commercial_property"
                                                    name="above_commercial_property">
                                                <option value=""/>
                                                <option value="food_outlet"
                                                        t-att-selected="fact_find.above_commercial_property == 'food_outlet'">
                                                    Flat above commercial food outlet
                                                </option>
                                                <option value="offices"
                                                        t-att-selected="fact_find.above_commercial_property == 'offices'">
                                                    Flat above commercial offices
                                                </option>
                                                <option value="pub"
                                                        t-att-selected="fact_find.above_commercial_property == 'pub'">
                                                    Flat above commercial pub
                                                </option>
                                                <option value="shop"
                                                        t-att-selected="fact_find.above_commercial_property == 'shop'">
                                                    Flat above shop (not food outlet)
                                                </option>
                                            </select>
                                        </div>

                                        <!-- Ground Rent -->
                                        <div class="form-group ground_rent">
                                            <label for="ground_rent">Ground rent</label>
                                            <input type="number" class="form-control" id="ground_rent"
                                                   name="ground_rent" t-att-value="fact_find.ground_rent"/>
                                        </div>


                                        <!-- Shared Ownership Details -->
                                        <div class="chkboxes shared_ownership_existing d-none">
                                            <label class="form-check-label" for="shared_ownership_existing">
                                                Is this property in Shared Ownership Scheme?
                                            </label>
                                            <input type="checkbox"
                                                   id="shared_ownership_existing"
                                                   class="form-check-input shared_ownership_existing_checked"
                                                   name="shared_ownership_existing"
                                                   t-att-checked="fact_find.shared_ownership"/>
                                        </div>

                                        <!-- Ownership Percentage -->
                                        <div class="form-group ownership_percentage_existing d-none">
                                            <label for="ownership_percentage_existing">Ownership % of yours</label>
                                            <select class="form-control" id="ownership_percentage_existing"
                                                    name="ownership_percentage_existing">
                                                <option value=""/>
                                                <option value="65"
                                                        t-att-selected="fact_find.ownership_percentage == 65">65%
                                                </option>
                                                <option value="70"
                                                        t-att-selected="fact_find.ownership_percentage == 70">70%
                                                </option>
                                                <option value="75"
                                                        t-att-selected="fact_find.ownership_percentage == 75">75%
                                                </option>
                                                <option value="80"
                                                        t-att-selected="fact_find.ownership_percentage == 80">80%
                                                </option>
                                                <option value="85"
                                                        t-att-selected="fact_find.ownership_percentage == 85">85%
                                                </option>
                                                <option value="90"
                                                        t-att-selected="fact_find.ownership_percentage == 90">90%
                                                </option>
                                            </select>
                                        </div>

                                        <!-- Help to Buy Loan Details -->
                                        <div class="chkboxes help_buy_loan_existing form-check d-none">
                                            <label class="form-check-label" for="help_buy_loan_existing">Do you have Help to Buy Loan for this property?
                                            </label>
                                            <input type="checkbox"
                                                   id="help_buy_loan_existing"
                                                   class="form-check-input help_buy_loan_existing_checked"
                                                   name="help_buy_loan_existing"
                                                   t-att-checked="fact_find.help_to_buy_loan"/>
                                        </div>

                                        <!-- Help to Buy Loan Type -->
                                        <div class="form-group d-none">
                                            <label for="help_to_buy_loan_type">Loan type</label>
                                            <select class="form-control" id="help_to_buy_loan_type"
                                                    name="help_to_buy_loan_type">
                                                <option value=""/>
                                                <option value="outside_london"
                                                        t-att-selected="fact_find.help_to_buy_loan_type == 'outside_london'">
                                                    Outside London 20%
                                                </option>
                                                <option value="london"
                                                        t-att-selected="fact_find.help_to_buy_loan_type == 'london'">
                                                    London 40%
                                                </option>
                                            </select>
                                        </div>

                                        <!-- Estimated Monthly Rental Income -->
                                        <div class="form-group estimated_monthly_rental_income_field d-none">
                                            <label for="estimated_monthly_rental_income">
                                                Estimated monthly rental income
                                            </label>
                                            <input type="number" class="form-control"
                                                   id="estimated_monthly_rental_income"
                                                   name="estimated_monthly_rental_income"
                                                   t-att-value="fact_find.estimated_monthly_rental_income"/>
                                        </div>

                                        <!-- Current Monthly Rental Income -->
                                        <div class="form-group current_monthly_rental_income_field">
                                            <label for="current_monthly_rental_income">
                                                Current Monthly rental income
                                            </label>
                                            <input type="number" class="form-control" id="current_monthly_rental_income"
                                                   name="current_monthly_rental_income"
                                                   t-att-value="fact_find.current_monthly_rental_income"/>
                                        </div>

                                        <!-- HMO -->
                                        <div class="chkboxes home_move_out">
                                            <label class="form-check-label" for="hmo">HMO</label>
                                            <input type="checkbox" id="hmo" class="form-check-input" name="hmo"
                                                   t-att-checked="fact_find.hmo"/>
                                        </div>

                                        <!-- Occupants Count -->
                                        <div class="form-group occupants_count d-none">
                                            <label for="occupants_count">How many occupants in this property?</label>
                                            <input type="number" class="form-control" id="occupants_count"
                                                   name="occupants_count" t-att-value="fact_find.occupants_count"/>
                                        </div>

                                        <!-- Company Name -->
                                        <div class="form-group company_name">
                                            <label for="company_name">Company Name</label>
                                            <input type="text" class="form-control" id="company_name"
                                                   name="company_name" t-att-value="fact_find.company_name"/>
                                        </div>

                                        <!-- Company Director -->
                                        <div class="form-group company_director">
                                            <label for="company_director">Are you a company director?</label>
                                            <select class="form-control" id="company_director" name="company_director">
                                                <option value=""/>
                                                <option value="one_applicant_only"
                                                        t-att-selected="fact_find.company_director == 'one_applicant_only'">
                                                    One applicant only
                                                </option>
                                                <option value="joint"
                                                        t-att-selected="fact_find.company_director == 'joint'">Joint
                                                </option>
                                            </select>
                                        </div>

                                        <!-- Additional Borrowing -->
                                        <div class="chkboxes additional_borrowing_check">
                                            <label for="additional_borrowing">
                                                Do you want to borrow any additional amount from this mortgage?
                                            </label>
                                            <input type="checkbox" id="additional_borrowing" class="form-check-input"
                                                   name="additional_borrowing"
                                                   t-att-checked="fact_find.additional_borrowing"/>
                                        </div>

                                        <!-- Additional Borrowing Reason -->
                                        <div class="form-group additional_borrowing_reason_fields d-none">
                                            <label for="additional_borrowing_reason">
                                                The reason for additional borrowing
                                            </label>
                                            <select t-attf-class="form-control #{fact_find.additional_borrowing_reason and 'has-value' or ''}"
                                                    id="additional_borrowing_reason" name="additional_borrowing_reason">
                                                <option value=""/>
                                                <option value="home_improvements_property"
                                                        t-att-selected="fact_find.additional_borrowing_reason == 'home_improvements_property'">
                                                    Home Improvements of this property
                                                </option>
                                                <option value="home_improvements_other_property"
                                                        t-att-selected="fact_find.additional_borrowing_reason == 'home_improvements_other_property'">
                                                    Home improvements of another property
                                                </option>
                                                <option value="deposit_buy_additional_property"
                                                        t-att-selected="fact_find.additional_borrowing_reason == 'deposit_additional_property'">
                                                    Deposit to buy an additional property
                                                </option>
                                                <option value="debt_management"
                                                        t-att-selected="fact_find.additional_borrowing_reason == 'debt_management'">
                                                    Debt Management
                                                </option>
                                            </select>
                                        </div>

                                        <!-- Additional Borrowing Amount -->
                                        <div class="form-group additional_borrowing_amount d-none">
                                            <label for="additional_borrowing_amount">
                                                The additional borrowing amount
                                            </label>
                                            <input type="number" class="form-control" id="additional_borrowing_amount"
                                                   name="additional_borrowing_amount"
                                                   t-att-value="fact_find.additional_borrowing_amount"/>
                                        </div>
                                        <button type="submit" class="btn btn-md btn-dark mt-3 mb-3 btn-submit"
                                                t-attf-data-id="new_mortgage-deposit">Next Section: Deposit
                                            <i class="fa fa-arrow-circle-o-right ms-1"/>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </template>
</odoo>