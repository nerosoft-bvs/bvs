<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_portal_invitation_wizard_form" model="ir.ui.view">
        <field name="name">portal.invitation.wizard.form</field>
        <field name="model">portal.invitation.wizard</field>
        <field name="arch" type="xml">
            <form string="Resend Portal Invitation">
                <group>
                    <field name="partner_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button string="Process" type="object" name="action_process" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>